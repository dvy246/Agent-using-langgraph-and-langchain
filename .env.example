# Heimdall Financial Intelligence System - Environment Configuration
# Copy this file to .env and fill in your API keys

# LangSmith Configuration (Optional - for monitoring and debugging)
LANGSMITH_TRACING="true"
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT="heimdall-financial-analysis"

# Primary Language Model
google=""  # Google Gemini API key (Required)

# Financial Data Providers (Required)
Alpha_Vantage_Stock_API=""  # Alpha Vantage API key
FINNHUB_API_KEY=""          # Finnhub API key
FPREP=""                    # Financial Modeling Prep API key
polygon_api=""              # Polygon.io API key
FRED_API=""                 # Federal Reserve Economic Data API key

# Regulatory and Filing Data (Required)
SEC_API_KEY=""              # SEC API key for filing data
EDGAR_USER_AGENT=""         # Your email for SEC EDGAR requests

# Search and Research (Required)
TAVILY_API_KEY=""           # Tavily search API key

# Additional Models (Optional)
GROQ_API_KEY=""             # Groq API key (alternative model)
OPEN_ROUTER_API=""          # OpenRouter API key (alternative model)

# Database Configuration (Optional - defaults to SQLite)
DATABASE_URL=""             # Optional: PostgreSQL connection string

# Application Configuration
LOG_LEVEL="INFO"            # Logging level (DEBUG, INFO, WARNING, ERROR)
ENVIRONMENT="development"   # Environment (development, staging, production)